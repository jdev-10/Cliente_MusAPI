<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente_principal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_black"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnVolver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@usuario"
                android:textColor="#ABFFBD"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollPerfil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toTopOf="@+id/layoutReproductor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/llMenuContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fondo_info_album"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panel de Control"
                    android:textColor="#ABFFBD"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:id="@+id/llMenuPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnEditarPerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Editar Perfil"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:background="@drawable/fondo_boton_secundario"
                            app:backgroundTint="@null"
                            android:paddingHorizontal="16dp"
                            android:minWidth="0dp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnCrearPerfilArtista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Artista"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:background="@drawable/fondo_boton_secundario"
                            app:backgroundTint="@null"
                            android:paddingHorizontal="16dp"
                            android:minWidth="0dp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnVerPerfilArtista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Artista"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:background="@drawable/fondo_boton_secundario"
                            app:backgroundTint="@null"
                            android:paddingHorizontal="16dp"
                            android:minWidth="0dp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnVerEstadisticas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stats"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:background="@drawable/fondo_boton_secundario"
                            app:backgroundTint="@null"
                            android:paddingHorizontal="16dp"
                            android:minWidth="0dp"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvListasTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Listas de ReproducciÃ³n"
                android:textColor="#ABFFBD"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layoutReproductor"
        layout="@layout/layout_reproductor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>