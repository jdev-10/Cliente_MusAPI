        <!-- CategorÃ­a musical -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a musical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Archivo audio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo de audio"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSubirArchivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar archivo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtNombreArchivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo seleccionado: Ninguno"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtDuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DuraciÃ³n: N/A"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp" />

        <!-- BotÃ³n confirmar -->
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4F959D"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
