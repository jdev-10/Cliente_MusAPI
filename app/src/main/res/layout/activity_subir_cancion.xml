            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ§¾ TÃ­tulo -->
        <TextView
